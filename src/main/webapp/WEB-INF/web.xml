<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Electives</display-name>
    <description>
        Web-app for managing elective courses records.
    </description>

    <!--//////////////////////////////////////////////////////////////////////////////-->
    <!--ADMIN-->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <!--TEACHERS-->
    <!--All-->
    <servlet>
    <servlet-name>AllTeachersServlet</servlet-name>
    <servlet-class>com.epam.lab.controller.AllTeachersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>AllTeachersServlet</servlet-name>
    <url-pattern>/admin/teachers</url-pattern>
    </servlet-mapping>

    <!--One-->
    <servlet>
    <servlet-name>OneTeacherServlet</servlet-name>
    <servlet-class>com.epam.lab.controller.OneTeacherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>OneTeacherServlet</servlet-name>
    <url-pattern>/admin/one_teacher</url-pattern>
    </servlet-mapping>

    
    <!--STUDENTS-->
    <!--All-->
    <servlet>
        <servlet-name>AllStudentsServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.AllStudentsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllStudentsServlet</servlet-name>
        <url-pattern>/admin/students</url-pattern>
    </servlet-mapping>

    <!--One-->
    <servlet>
        <servlet-name>OneStudentServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.OneStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OneStudentServlet</servlet-name>
        <url-pattern>/admin/one_student</url-pattern>
    </servlet-mapping>


    <!--COURSES-->
    <!--All-->
    <servlet>
        <servlet-name>AllCoursesServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.AllCoursesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllCoursesServlet</servlet-name>
        <url-pattern>/admin/courses</url-pattern>
    </servlet-mapping>

    <!--One-->
    <servlet>
        <servlet-name>OneCourseServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.OneCourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OneCourseServlet</servlet-name>
        <url-pattern>/admin/one_course</url-pattern>
    </servlet-mapping>

    <!--//////////////////////////////////////////////////////////////////////////////-->
    <!--USER-->

    <!--STUDENT PAGE-->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.StudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student/student</url-pattern>
    </servlet-mapping>


    <!--COURSE PAGE-->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.CourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/student/course</url-pattern>
    </servlet-mapping>

    <!--TEACHER PAGE-->

    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.TeacherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teacher/teacher</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CourseForTeacherServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.CourseForTeacherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CourseForTeacherServlet</servlet-name>
        <url-pattern>/teacher/course_for_teacher</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>StudentForTeacherServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.StudentForTeacherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>StudentForTeacherServlet</servlet-name>
        <url-pattern>/teacher/student_for_teacher</url-pattern>
    </servlet-mapping>
    
    <!--REVIEW-->
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.ReviewServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/student/review</url-pattern>
    </servlet-mapping>


    <!--REGISTRATION-->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.auth.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!--LOGIN-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <!--LOCALE-->
    <servlet>
        <servlet-name>LocaleServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.LocaleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LocaleServlet</servlet-name>
        <url-pattern>/locale</url-pattern>
    </servlet-mapping>


    <!--LOGOUT-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.epam.lab.controller.auth.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.epam.lab.controller.auth.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/teacher/*</url-pattern>
        <url-pattern>/student/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>


</web-app>